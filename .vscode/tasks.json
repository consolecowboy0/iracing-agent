{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start iRacing AI Agent",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "uvicorn",
                "ai_agent:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Start Server.py",
            "type": "shell",
            "command": "/home/dustinlanders/Desktop/iracing-agent/.venv/bin/python",
            "args": [
                "-m",
                "uvicorn",
                "server:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}